extends templates/main
block variables
	- let pageTitle = TITLE_PART + ' | Services';
	- let isHome = false; //- Если true то логотип не будет ссылкой
	- let currentPage = 2.02; // Для каждой страницы уникален. Номер смотреть в файле pug/templates/_vars.pug в массивах с пунктами меню
	- let currentSection = 2; // // Для каждой раздела уникален. Home -1, projects - 2, news - 3, pages - 4
	- let headerClasses = 'header--absolute header--separator __js_fixed-header';
	//- let socialModClass = '';
	//- let navigationModClass = 'navigation--hover-white';
	//- let isLeftwardHeader = true;
	- let bodyModClass = '';

block header
	include modules/header

block content
	article.article.services
		.article__container.container-fluid
			.row
				header.article__header.col-12.col-lg-7.col-xl-6
					h1.article__title Our <br>services
					.article__text In the design process, they create both functional and beautiful things. The team possesses unique


				each item in SERVICES_CARDS
					- let addCl = item.addCl ? item.addCl : '';
					//- let bootstrapCl = item.bootstrapCl ? item.bootstrapCl : 'col-12 col-sm-6 col-md-4';
					- let classes = addCl + ' ' + item.bootstrapCl;
					.services__item(class= classes)
						a.service-preview(href= URLS.pages.serviceDetail)
							picture
								source(type="image/webp" srcset="img/picture/services/" + item.image.url + ".webp 1x, img/picture/services/" + item.image.url + "@2x.webp 2x")
								img(src="img/picture/services/" + item.image.url + ".jpg", srcset="img/picture/services/" + item.image.url + "@2x.jpg 2x", width= item.image.w, height= item.image.h, alt= item.text)
							span.service-preview__caption!= item.text


block footer
	include modules/footer
