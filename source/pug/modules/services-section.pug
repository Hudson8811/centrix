section.services-section
	.services-section__container.services-section__container--small.container-fluid
		h2.services-section__title Services

		.services-section__main
			.services-section__image
				picture
					source(type="image/webp", srcset="img/picture/creative/services.webp 1x, img/picture/creative/services@2x.webp 2x")
					img(src="img/picture/creative/services.jpg", srcset="img/picture/creative/services@2x.jpg 2x", width="823", height="417", alt="")

			.services-section__aside
				ul.services-section__list
					each item in SERVICES_LIST
						li.services-section__item
							a.services-section__link(href= URLS.pages.serviceDetail)= item
								span
									+icon('link-arrow2')(width="24", height="23")
