extends templates/main
block variables
	- let pageTitle = TITLE_PART + ' | Single Project';
	- let isHome = false; //- Если true то логотип не будет ссылкой
	- let currentPage = 3.03; // Для каждой страницы уникален. Номер смотреть в файле pug/templates/_vars.pug в массивах с пунктами меню
	- let currentSection = 3; // // Для каждой раздела уникален. Home -1, projects - 2, news - 3, pages - 4
	- headerClasses = 'header--separator __js_fixed-header';

block header
	include modules/header

block content
	article.single-project
		.single-project__container.container.container--size-large
			.single-project__hero.row
				.single-project__hero-image.col-12.col-md-6.col-lg-7.col-xxl-6
					picture
						source(type="image/webp", srcset="img/picture/single-project/5.webp 1x, img/picture/single-project/5@2x.webp 2x")
						img(src="img/picture/single-project/5.jpg", srcset="img/picture/single-project/5@2x.jpg 2x", width="785", height="747", alt="project photo")
				.single-project__hero-main.col-12.col-md-6.col-lg-5.col-xxl-6.order-md-first

					h1.single-project__title
						span Nike
						span Sneakers
						span Photo
					//-+arrow-link('', false, 'single-project__more')
					.single-project__icon
						+icon('link-arrow')(width="75", height="75")
					.single-project__hero-text Alienum phaedrum torquatos nec eu, detr periculis ex, nihil expetendis in mei. Mei an pericula
						|  euripidis hinc partem ei est. Eos ei nisl graecis, vix aperiri consequat an. Eius lorem tincidunt vix at, vel
						|  pertinax sensibus id, error epicurei mea et. Mea facilisis urbanitas moderatius id. Vis ei rationibus definiebas.
			//-section.projects-listing

				ul.projects-listing__list
					li.projects-listing__item.project-card.row
						a.project-card__image.col-12.col-md-6(href='#', data-aos="fade-up")
							picture
								source(type="image/webp", srcset="img/picture/single-project/5.webp 1x, img/picture/single-project/5@2x.webp 2x")
								img(src="img/picture/single-project/5.jpg", srcset="img/picture/single-project/5@2x.jpg 2x", width="785", height="747", alt="project photo")
						.col-12.col-md-6.order-md-first
							.project-card__main
								.project-card__main-left
									h2.project-card__title(data-aos="fade-up") Nike Sneakers Photo
								+arrow-link('', '#', 'project-card__more')(data-aos="fade-up")
								.project-card__text(data-aos="fade-up") Alienum phaedrum torquatos nec eu, detr periculis ex, nihil expetendis in mei. Mei an pericula
									|  euripidis hinc partem ei est. Eos ei nisl graecis, vix aperiri consequat an. Eius lorem tincidunt vix at, vel
									|  pertinax sensibus id, error epicurei mea et. Mea facilisis urbanitas moderatius id. Vis ei rationibus definiebas.

			include modules/meta.pug

			section.services-section.single-project__services
				.row.services-section__main
					.col-12.col-xxl-3(data-aos="fade-up")
						.services-section__text Alienum phaedrum torquatos nec eu, detr periculis ex, nihil expetendis in mei. Mei an pericula euripidis hinc
							|  partem ei est. Eos ei nisl graecis, vix aperiri consequat an. Eius lorem tincidunt vix at
					.col-12.col-xxl-9.services-section__right
						h2.services-section__title(data-aos="fade-up") Services
						.services-section__image
							.services-section__menu
								ul.services-section__list
									li.services-section__item(data-aos="fade-up")
										a.services-section__link(href='service-detail.html') Web development
											span
												+icon('link-arrow2')(width="24", height="23")
									li.services-section__item(data-aos="fade-up")
										a.services-section__link(href='service-detail.html') Marketing
											span
												+icon('link-arrow2')(width="24", height="23")
									li.services-section__item(data-aos="fade-up")
										a.services-section__link(href='service-detail.html') Graphic design
											span
												+icon('link-arrow2')(width="24", height="23")
									li.services-section__item(data-aos="fade-up")
										a.services-section__link(href='service-detail.html') Photography
											span
												+icon('link-arrow2')(width="24", height="23")
							picture
								source(type="image/webp", srcset="img/picture/single-project/2.webp 1x, img/picture/single-project/2@2x.webp 2x")
								img(src="img/picture/single-project/2.jpg", srcset="img/picture/single-project/2@2x.jpg 2x", width="459", height="642", alt="")

			include modules/project-other.pug

			.single-project__next(data-aos="fade-up")
				a(href='#', target='_blank') Next
					+icon('arrow-right')(width="104" height="86")



block footer
	include modules/footer
