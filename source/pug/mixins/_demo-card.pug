mixin demo-card(pic, galHref, text, href, className, coming)
	.demo-card(class=className)
		if coming
			.demo-card__image
			a.demo-card__link(href=href, target="_blank")= text
				+icon('link-arrow')(width='22', height='22')
		else
			a.demo-card__image(href= href, target="_blank")
				//-(href="img/picture/demo/" + galHref + ".jpg")
				img(src="img/picture/demo/" + pic + ".jpg", alt="")
				.demo-card__btn
					+icon('link-arrow')
			a.demo-card__link(href=href, target="_blank")= text
				+icon('link-arrow')(width='22', height='22')
		//-else
			a.demo-card__image(href="img/picture/demo/" + galHref + ".jpg", data-fancybox='gallery')
				img(src="img/picture/demo/" + pic + ".jpg", alt="")
				.demo-card__btn
					+icon('link-arrow')
			a.demo-card__link(href=href)= text
				+icon('link-arrow')(width='22', height='22')
